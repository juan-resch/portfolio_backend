// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  birtyday  String
  photo     String?
  email     String  @unique
  password  String
  posts     Post[]
}

model Post {
  id          String @id @default(cuid())
  title       String
  description String
  text        String
  User        User   @relation(fields: [userId], references: [id])
  userId      String
}

model Work {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  skills      Skill[]
}

model Skill {
  id     Int    @id @default(autoincrement())
  name   String
  icon   String
  workId Int
  Work   Work   @relation(fields: [workId], references: [id])
}
